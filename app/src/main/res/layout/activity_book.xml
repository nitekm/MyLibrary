<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BookActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Want to Read"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/btnAddToWishList"
                    app:layout_constraintEnd_toEndOf="@+id/btnAddToCurrRead"
                    app:layout_constraintStart_toStartOf="@+id/btnAddToCurrRead"
                    app:layout_constraintTop_toBottomOf="@+id/btnAddToCurrRead" android:layout_marginTop="20dp"
                    android:textAllCaps="false"/>
            <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imgBookActivity"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginTop="50dp"/>
            <Button
                    android:text="Currently Reading"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/btnAddToCurrRead"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginTop="50dp"
                    android:textAllCaps="false"/>
            <Button
                    android:text="Already Read"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/btnAddToAlreadyRead"
                    app:layout_constraintEnd_toEndOf="@+id/btnAddToWishList"
                    app:layout_constraintStart_toStartOf="@+id/btnAddToWishList"
                    android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btnAddToWishList"
                    android:textAllCaps="false"/>
            <Button
                    android:text="Add to Favorites"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content" android:id="@+id/btnAddToFav"
                    app:layout_constraintStart_toStartOf="@+id/btnAddToAlreadyRead"
                    app:layout_constraintEnd_toEndOf="@+id/btnAddToAlreadyRead"
                    app:layout_constraintTop_toBottomOf="@+id/btnAddToAlreadyRead" android:layout_marginTop="20dp"
                    android:textAllCaps="false"/>
            <TextView
                    android:text="Book Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtABName"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" app:layout_constraintTop_toTopOf="@+id/guideline3"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:text="The Mysterious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/aBNametxt"
                    app:layout_constraintTop_toTopOf="@+id/txtABName"
                    app:layout_constraintStart_toStartOf="@+id/guideline4"
                    app:layout_constraintBottom_toBottomOf="@+id/txtABName"/>
            <TextView
                    android:text="Author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtABAuthor"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/txtABName" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="mNitek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/aBAuthortxt"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" app:layout_constraintTop_toTopOf="@+id/txtABAuthor"/>
            <TextView
                    android:text="Pages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtABPages"
                    app:layout_constraintStart_toStartOf="@+id/guideline2"
                    app:layout_constraintTop_toBottomOf="@+id/txtABAuthor" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="200"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/aBPagestxt"
                    app:layout_constraintStart_toStartOf="@+id/guideline4" app:layout_constraintTop_toTopOf="@+id/txtABPages"/>
            <TextView
                    android:text="Description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtABDescripton"
                    app:layout_constraintTop_toBottomOf="@+id/txtABPages"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginTop="20dp"/>
            <TextView
                    android:text="Description here"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/aBDescriptiontxt"
                    app:layout_constraintTop_toBottomOf="@+id/txtABDescripton"
                    app:layout_constraintStart_toStartOf="@+id/guideline2" android:layout_marginTop="20dp"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                        android:id="@+id/guideline"
                                                        android:orientation="vertical" app:layout_constraintGuide_end="198dp"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                        android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                        android:orientation="vertical"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                        android:id="@+id/guideline3" app:layout_constraintGuide_begin="340dp"
                                                        android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                        android:id="@+id/guideline4" app:layout_constraintGuide_begin="106dp"
                                                        android:orientation="vertical"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</RelativeLayout>