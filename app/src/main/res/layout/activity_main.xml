<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".MainActivity">
	<ImageView
			android:layout_width="130dp"
			android:layout_height="150dp"
			android:id="@+id/imgLogo"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="40dp"
			android:src="@mipmap/book" />
	<TextView
			android:text="My Library"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/txtAppName"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/imgLogo"
			android:textStyle="bold" android:textAllCaps="false" android:textSize="24sp"
			android:fontFamily="@font/aclonica"/>
	<Button
			android:text="See All Books"
			android:layout_width="200dp"
			android:layout_height="wrap_content" android:id="@+id/btnSeeAllBooks"
			app:layout_constraintTop_toBottomOf="@+id/txtAppName" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="30dp" android:textAllCaps="false"/>
	<Button
			android:text="Currently Reading Books"
			android:layout_width="200dp"
			android:layout_height="wrap_content" android:id="@+id/btnCurrentlyReading"
			app:layout_constraintEnd_toEndOf="@+id/btnSeeAllBooks"
			app:layout_constraintStart_toStartOf="@+id/btnSeeAllBooks"
			app:layout_constraintTop_toBottomOf="@+id/btnSeeAllBooks" android:layout_marginTop="15dp"
			android:textAllCaps="false"/>
	<Button
			android:text="Already Read Books"
			android:layout_width="200dp"
			android:layout_height="wrap_content" android:id="@+id/btnAlreadyRead"
			app:layout_constraintEnd_toEndOf="@+id/btnCurrentlyReading"
			app:layout_constraintStart_toStartOf="@+id/btnCurrentlyReading"
			app:layout_constraintTop_toBottomOf="@+id/btnCurrentlyReading" android:layout_marginTop="15dp"
			android:textAllCaps="false"/>
	<Button
			android:text="Wishlist"
			android:layout_width="200dp"
			android:layout_height="wrap_content" android:id="@+id/btnWishlist"
			app:layout_constraintEnd_toEndOf="@+id/btnAlreadyRead"
			app:layout_constraintStart_toStartOf="@+id/btnAlreadyRead"
			app:layout_constraintTop_toBottomOf="@+id/btnAlreadyRead" android:layout_marginTop="15dp"
			android:textAllCaps="false"/>
	<Button
			android:text="Your Favorites"
			android:layout_width="200dp"
			android:layout_height="wrap_content" android:id="@+id/btnFavorites"
			app:layout_constraintEnd_toEndOf="@+id/btnWishlist" app:layout_constraintStart_toStartOf="@+id/btnWishlist"
			android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/btnWishlist"
			android:textAllCaps="false"/>
	<Button
			android:text="About"
			android:layout_width="200dp"
			android:layout_height="wrap_content" android:id="@+id/btnAbout"
			app:layout_constraintEnd_toEndOf="@+id/btnFavorites" app:layout_constraintStart_toStartOf="@+id/btnFavorites"
			app:layout_constraintTop_toBottomOf="@+id/btnFavorites" android:layout_marginTop="15dp"/>
	<TextView
			android:text="Developed by mNitek"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/txtDvlp"
			app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="25dp"
			android:textStyle="italic"/>
</androidx.constraintlayout.widget.ConstraintLayout>